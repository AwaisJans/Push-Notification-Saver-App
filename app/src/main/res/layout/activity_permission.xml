<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".activities.PermissionScreen">


    <RelativeLayout
        android:id="@+id/tbLyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:gravity="center|start"
            android:minHeight="50dp"
            android:paddingEnd="40dp"
            android:text="Permission Screen"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAllowPermission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="70dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Allow Permission"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="7dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkip"
        android:layout_width="200dp"
        android:layout_below="@+id/btnAllowPermission"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:gravity="center"
        android:minHeight="70dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:stateListAnimator="@null"
        android:text="Skip Permission"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="7dp" />




</RelativeLayout>